{
    "compilerOptions": {
    "target": "ES2020",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipLibCheck": true
    },
    "include": ["src/**/*", "bin/**/*"]
}